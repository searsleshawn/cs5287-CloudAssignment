from kafka import KafkaProducer
import json, time, random

producer = KafkaProducer(
    bootstrap_servers=["{{ hostvars[groups['kafka'][0]].inventory_hostname }}:9092"],
    value_serializer=lambda v: json.dumps(v).encode("utf-8")
)

merchants = ["Amazon", "Walmart", "Target", "Starbucks"]
cards = ["1111-2222-3333-4444", "5555-6666-7777-8888", "9999-0000-1111-2222"]

while True:
    event = {
        "card": random.choice(cards),
        "merchant": random.choice(merchants),
        "amount": round(random.uniform(5, 500), 2),
        "timestamp": time.time()
    }
    producer.send("transactions", event)
    print("Sent:", event)
    time.sleep(1)
