version: "3.8"

networks:
  metrics_net:
    external: true
  iot_net:
    external: true

secrets:
  grafana_user:
    external: true
  grafana_pass:
    external: true

services:

  # ===============================
  # Grafana (HTTP + Secrets)
  # ===============================
  grafana:
    image: grafana/grafana:11.1.0
    networks: [metrics_net]
    ports:
      - "3000:3000"
    secrets:
      - grafana_user
      - grafana_pass
    environment:
      - GF_SECURITY_ADMIN_USER__FILE=/run/secrets/grafana_user
      - GF_SECURITY_ADMIN_PASSWORD__FILE=/run/secrets/grafana_pass
      - GF_AUTH_ANONYMOUS_ENABLED=true
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_SECURITY_ALLOW_EMBEDDING=true
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager

  # ===============================
  # Prometheus
  # ===============================
  prometheus:
    image: prom/prometheus:v2.54.1
    networks: [metrics_net]
    ports:
      - "9090:9090"
    volumes:
      - /opt/prometheus:/prometheus
      - /opt/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--storage.tsdb.retention.time=15d"
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager

  # ===============================
  # Loki (log database)
  # ===============================
  loki:
    image: grafana/loki:2.9.8
    networks: [metrics_net]
    ports:
      - "3100:3100"
    volumes:
      - /opt/loki:/loki
    command:
      - "-config.file=/etc/loki/local-config.yaml"
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager

  # ===============================
  # Promtail (log collector)
  # ===============================
  promtail:
    image: grafana/promtail:2.9.8
    networks: [metrics_net]
    volumes:
      - /var/log:/var/log
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /etc/promtail/config.yml:/etc/promtail/config.yml:ro
    command:
      - "-config.file=/etc/promtail/config.yml"
    deploy:
      mode: global

  # ===============================
  # cAdvisor (node metrics)
  # ===============================
  cadvisor:
    image: gcr.io/cadvisor/cadvisor:v0.49.1
    networks: [metrics_net]
    ports:
      - "8080:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    deploy:
      mode: global

  # ===============================
  # Kafka Exporter (plaintext)
  # ===============================
  kafka_exporter:
    image: danielqsj/kafka-exporter:latest
    networks: [metrics_net, iot_net]
    environment:
      - KAFKA_BROKERS=kafka:9092
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager
    depends_on:
      - kafka

  # ===============================
  # Mongo Exporter (plaintext)
  # ===============================
  mongodb_exporter:
    image: percona/mongodb_exporter:0.40.0
    networks: [metrics_net, iot_net]
    environment:
      - MONGODB_URI=mongodb://mongo:27017
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager
    depends_on:
      - mongo
